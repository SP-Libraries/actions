{
  "TOOLS": {
    "COMMITLINT": {
      "title": "Commit Lint",
      "type": "npm",
      "command": "commitlint",
      "args": ["--from=origin/main", "--to=HEAD"],
      "behavior": "error",
      "includeFiles": false,
      "priority": 9
    },
    "CSPELL": {
      "title": "cSpell",
      "type": "npm",
      "command": "cspell",
      "args": ["--no-progress", "--no-summary"],
      "behavior": "error",
      "ignoreFiles": ["composer.lock", "package-lock.json"],
      "priority": 8
    },
    "DEPCHECK": {
      "title": "DepCheck",
      "type": "npm",
      "command": "depcheck",
      "behavior": "error",
      "includeFiles": false,
      "priority": 10
    },
    "ESLINT": {
      "title": "ESLint",
      "type": "npm",
      "command": "eslint",
      "args": ["--fix"],
      "behavior": "error",
      "priority": 4
    },
    "MARKDOWNLINT": {
      "title": "Markdown Lint",
      "type": "npm",
      "command": "markdownlint",
      "args": ["--fix"],
      "behavior": "error",
      "priority": 5
    },
    "PRETTIER": {
      "title": "Prettier",
      "type": "npm",
      "command": "prettier",
      "args": ["--write"],
      "behavior": "error",
      "priority": 2
    }
  },
  "MAPPING": {
    "yml": ["PRETTIER"],
    "json": ["PRETTIER"],
    "js": ["ESLINT", "PRETTIER"],
    "md": ["PRETTIER", "MARKDOWNLINT"],
    "*": ["CSPELL", "COMMITLINT", "DEPCHECK"]
  }
}
